<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Control Salud - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="~/Resource/iconApp.ico" rel="shortcut icon"  type="image/x-icon"/>
    @Styles.Render("~/bundles/css")
</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <img src="~/Resource/IconApp.png" alt="Alternate Text" />
        </div>
    </div>

    <div class="container mg-tb-30">
        <div class="bs-component">
            <ul class=" nav nav-tabs flex-column flex-sm-row">
                <li class="nav-item">
                    <a href="#inicio" class="nav-link active show" data-toggle="tab">Inicio</a>
                </li>
                <li>
                    <a href="#seguimiento" class="nav-link" data-toggle="tab">Seguimiento</a>
                </li>
                <li>
                    <a href="#historial" class="nav-link" data-toggle="tab">Historial</a>
                </li>
                <li>
                    <a href="#estadisticas" class="nav-link" data-toggle="tab">Estadisticas</a>
                </li>
                <li>
                    <a href="#sugerencias" class="nav-link" data-toggle="tab">Sugerencias</a>
                </li>
                <li>
                    <a href="#about" class="nav-link" data-toggle="tab">About</a>
                </li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active show" id="inicio">
                    <button type="button" class="btn btn-outline-light">OPCION 1</button>
                    <button type="button" class="btn btn-outline-light">OPCION 2</button>
                    <button type="button" class="btn btn-outline-light">OPCION 3</button>
                </div>
                <div class="tab-pane fade" id="seguimiento">
                    <button type="button" class="btn btn-outline-warning">SUPLEMENTACION</button>
                    <button type="button" class="btn btn-outline-warning">CRED</button>
                    <button type="button" class="btn btn-outline-warning">VACUNAS</button>
                </div>
                <div class="tab-pane fade" id="historial">
                    <button type="button" class="btn btn-outline-primary">SUPLEMENTACION</button>
                    <button type="button" class="btn btn-outline-primary">CRED</button>
                    <button type="button" class="btn btn-outline-primary">VACUNAS</button>
                </div>
                <div class="tab-pane fade" id="estadisticas">
                    <button type="button" class="btn btn-outline-danger">CRITICO</button>
                    <button type="button" class="btn btn-outline-warning">MODERADO</button>
                    <button type="button" class="btn btn-outline-success">LEVE</button>
                </div>
                <div class="tab-pane fade" id="sugerencias">
                </div>
                <div class="tab-pane fade" id="about">
                </div>
            </div>
        </div>

        @RenderBody()

        <footer id="footer">
            <div class="row">
                <div class="col-lg-12">

                    <ul class="list-unstyled">
                        <li class="float-lg-right"><a href="#top">Back to top</a></li>
                        <li><a href="http://blog.bootswatch.com" onclick="pageTracker._link(this.href); return false;">Blog</a></li>
                        <li><a href="https://feeds.feedburner.com/bootswatch">RSS</a></li>
                        <li><a href="https://twitter.com/bootswatch">Twitter</a></li>
                        <li><a href="https://github.com/thomaspark/bootswatch/">GitHub</a></li>
                        <li><a href="../help/#api">API</a></li>
                        <li><a href="../help/#donate">Donate</a></li>
                    </ul>
                    <p>Made by <a href="http://thomaspark.co">Thomas Park</a>.</p>
                    <p>Code released under the <a href="https://github.com/thomaspark/bootswatch/blob/master/LICENSE">MIT License</a>.</p>
                    <p>Based on <a href="https://getbootstrap.com" rel="nofollow">Bootstrap</a>. Icons from <a href="http://fontawesome.io/" rel="nofollow">Font Awesome</a>. Web fonts from <a href="https://fonts.google.com/" rel="nofollow">Google</a>.</p>

                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/js")
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    @*<script src="~/Content/js/custom.js"></script>*@
</body>
</html>